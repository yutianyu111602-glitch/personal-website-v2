# 天宫科技全屏视觉体验应用 - 环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 应用基础配置
VITE_APP_TITLE="天宫科技全屏视觉体验应用"
VITE_APP_VERSION="2.0.0"
VITE_APP_DESCRIPTION="银色主题的Shadertoy动画效果应用"

# 开发环境配置
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true
VITE_SHOW_PERFORMANCE_METRICS=true
VITE_ENABLE_HOT_RELOAD=true

# Termusic后端配置
VITE_TERMUSIC_HOST=localhost
VITE_TERMUSIC_PORT=7533
VITE_TERMUSIC_PROTOCOL=http
VITE_TERMUSIC_WEBSOCKET_ENABLED=true
VITE_TERMUSIC_TIMEOUT=5000
VITE_TERMUSIC_MAX_RECONNECT_ATTEMPTS=5

# API端点配置
VITE_API_BASE_URL=http://localhost:7533
VITE_API_WEBSOCKET_URL=ws://localhost:7533/ws
VITE_API_HEALTH_ENDPOINT=/health
VITE_API_PLAYER_ENDPOINT=/api/player
VITE_API_PLAYLIST_ENDPOINT=/api/playlist

# 音频配置
VITE_AUDIO_DEFAULT_VOLUME=0.7
VITE_AUDIO_ENABLE_WAVESURFER=true
VITE_AUDIO_WAVESURFER_WINDOW_SIZE=10
VITE_AUDIO_SUPPORTED_FORMATS=mp3,wav,ogg,m4a,aac

# 视觉效果配置
VITE_SHADERS_AUTO_SWITCH=true
VITE_SHADERS_SWITCH_INTERVAL=0
VITE_SHADERS_PRELOAD_ENABLED=true
VITE_BACKGROUND_MOUSE_RESPONSE=true

# 多语言配置
VITE_I18N_DEFAULT_LANGUAGE=zh
VITE_I18N_FALLBACK_LANGUAGE=en
VITE_I18N_DETECT_BROWSER_LANGUAGE=true

# 性能配置
VITE_PERFORMANCE_ENABLE_MONITORING=true
VITE_PERFORMANCE_LOG_RENDER_TIME=false
VITE_PERFORMANCE_LOG_MEMORY_USAGE=false
VITE_PERFORMANCE_MEMORY_THRESHOLD=100

# 安全配置
VITE_SECURITY_ENABLE_CSP=true
VITE_SECURITY_ALLOWED_HOSTS=localhost,127.0.0.1
VITE_SECURITY_ENABLE_CORS=true

# 分析和监控配置
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_PROVIDER=none
VITE_ERROR_REPORTING_ENABLED=false
VITE_ERROR_REPORTING_PROVIDER=none

# 实验性功能配置
VITE_EXPERIMENTAL_WEBGPU=false
VITE_EXPERIMENTAL_SERVICE_WORKER=false
VITE_EXPERIMENTAL_PWA=false
VITE_EXPERIMENTAL_OFFLINE_MODE=false

# 构建配置
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_ANALYZE_BUNDLE=false
VITE_BUILD_DROP_CONSOLE=true